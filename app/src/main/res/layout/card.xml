<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="320dp"
        android:layout_marginBottom="10dp"
        card_view:cardCornerRadius="1dp"
        android:background="#FAFAFA">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FAFAFA"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/card_image"
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:background="#FAFAFA"
                android:layout_alignParentTop="true" />

            <TextView
                android:id="@+id/card_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FAFAFA"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/card_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:textColor="#7A7A7A"
                android:background="#FAFAFA"/>

            <TextView
                android:id="@+id/card_option1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:textColor="#000000"
                android:background="#FAFAFA"/>

            <TextView
                android:id="@+id/card_option2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:textColor="#000000"
                android:background="#FAFAFA"/>

            <TextView
                android:id="@+id/card_sponsored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FAFAFA"
                android:layout_alignParentTop="true" />

            <ImageView
                android:id="@+id/card_sponsorLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FAFAFA"
                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:background="#FAFAFA">

                <TextView
                    android:id="@+id/card_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LIKE"
                    android:textColor="#0E5580"
                    android:background="#FAFAFA"
                    android:layout_marginRight="65dp"
                    android:layout_alignParentTop="true" />
                <TextView
                    android:id="@+id/card_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="COMMENT"
                    android:textColor="#0E5580"
                    android:background="#FAFAFA"
                    android:layout_marginRight="65dp"
                    android:layout_alignParentTop="true" />
                <TextView
                    android:id="@+id/card_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SHARE"
                    android:textColor="#0E5580"
                    android:background="#FAFAFA"
                    android:layout_alignParentTop="true" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>